<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Avatar circle (simple placeholder) -->
    <View
        android:id="@+id/viewAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_chat_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- First letter of name -->
    <TextView
        android:id="@+id/tvAvatarInitial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/viewAvatar"
        app:layout_constraintBottom_toBottomOf="@id/viewAvatar"
        app:layout_constraintStart_toStartOf="@id/viewAvatar"
        app:layout_constraintEnd_toEndOf="@id/viewAvatar"/>

    <!-- Chat name -->
    <TextView
        android:id="@+id/tvChatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/viewAvatar"
        app:layout_constraintStart_toEndOf="@id/viewAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        android:layout_marginStart="8dp"/>

    <!-- Last message -->
    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last message preview..."
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvChatName"
        app:layout_constraintBottom_toBottomOf="@id/viewAvatar"
        app:layout_constraintStart_toStartOf="@id/tvChatName"
        app:layout_constraintEnd_toStartOf="@id/tvTime"/>

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 PM"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/tvChatName"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
